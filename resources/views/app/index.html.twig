{% extends 'base.html.twig' %}

{% block title %}Hello {{ controllerName }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            font: 18px/1.5 sans-serif;
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
        }
        .example-wrapper h1 {
            text-align: center;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
            word-break: break-all;
        }
    </style>
    <div class="example-wrapper">
        <h1>Hello {{ controllerName }}!</h1>
        <p>This friendly message is coming from your controller at <code>{{ controllerLocation }}</code></p>
    </div>
{% endblock %}
